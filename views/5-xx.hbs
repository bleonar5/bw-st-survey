
<div id="content-main-top-o">
    <div class="row justify-content-center bespoke-vertical-align-o-top font-size-90">
        {{!-- py-1 px-5 below --}}
        <div id="task3TextBoxScenario" class="col-12 ">
                {{#each sheetsSituations}}
                    <div >
                        {{#if scenario}}
                            {{{this.text}}}
                        {{/if}}
                    </div>
                {{/each}}
            
        </div>
    </div>
</div>


<div id="content-main-bottom-o">
    <div id="task-3-text-box" class="justify-content-center bespoke-vertical-align-o-bottom col-12 text-left font-size-90">
        <div class="col-12">
            <form onSubmit="return checkQuestionsRadios(getArrayOfQuestions());" method="POST">
                <table class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <td class="blank col-7"></td>

                            <th class="key col-1">
                                <div class="text-center font-size-sm"><span class="font-weight-normal">Very<br></span><span class="text-danger">Ineffective</span></div>
                            </th>
                            <th class="key col-1">
                                <div class="text-center font-size-sm"><span class="font-weight-normal">Somewhat<br></span><span class="text-danger">Ineffective</span></div>
                            </th>
                            <th class="key col-1 align-middle">
                                    <div class="text-center text-secondary font-weight-normal font-size-sm "><span>Neutral</span></div>
                            </th>
                            <th class="key col-1">
                                <div class="text-center font-size-sm"><span class="font-weight-normal">Somewhat<br></span><span class="text-success">Effective</span></span></div>
                            </th>
                            <th class="key col-1">
                                <div class="text-center font-size-sm"><span class="font-weight-normal">Very<br></span><span class="text-success">Effective</span></span></div>
                            </th>
                        </tr>
                    </thead>
                    
                    <tbody>
                        {{#each perguntas}} 
                        {{#if radio}} 
                            <tr name="radioques">
                                <td class="text-left col-7">{{this.text}}</td>

                                <td class="radiocol text-center input col-1">
                                        <input class="form-check-input first-radio-box" type="radio" name={{this.id}} value="1-strongly-disagree" onclick="removeWarning();" {{#if this.option1Selected}} checked {{/if}} required>
                                    </td>
                                <td class="radiocol text-center input col-1">
                                        <input class="form-check-input" type="radio" name={{this.id}} value="2-somewhat-disagree" onclick="removeWarning();" {{#if this.option2Selected}} checked {{/if}} required>
                                    </td>
                                <td class="radiocol text-center input col-1">
                                        <input class="form-check-input" type="radio" name={{this.id}} value="3-no-opinion" onclick="removeWarning();" {{#if this.option3Selected}} checked {{/if}} required>
                                    </td>
                                <td class="radiocol text-center input col-1">
                                        <input class="form-check-input" type="radio" name={{this.id}} value="4-somewhat-agree" onclick="removeWarning();" {{#if this.option4Selected}} checked {{/if}} required>
                                    </td>
                                <td class="radiocol text-center input col-1">
                                        <input class="form-check-input" type="radio" name={{this.id}} value="5-strongly-agree" onclick="removeWarning();" {{#if this.option5Selected}} checked {{/if}} required>
                                    </td>
                            </tr>
                        {{/if}} 
                        {{/each}}
                    </tbody>
                </table>
        </div>
    </div>
</div>

