
{{> 1contentheading}}
    <div class="row h-100">
        <div class="col-md-12 align-self-end">
            <h2 class="text-primary">{{#each sheetsSituations}}{{#if heading}}{{this.text}}{{/if}}{{/each}}</h2>
        </div>
    </div>
</div>

{{> 2contentmain}}
    <div class="row justify-content-center bespoke-60vh-vertical-align">
        <div class="col-xs-8 col-sm-10 col-md-10 text-left px-md-3 px-lg-5">
        
        <ul>
            {{#each sheetsSituations}}
            {{#if scenario}}
                <li class="p-2 font-size-scenario"> {{this.text}}</li>
            {{/if}}
            {{/each}}
        </ul>
        
        <p class="m-4">Click next to rate 10 potential responses. You can return to this scenario at any time to refresh your memory.</p>

        </div>
    </div>
{{!-- closing div of end of contentmain below --}}
</div>

