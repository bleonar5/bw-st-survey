<div id="content-heading-e" class="text-center row">
    {{> 7completeAllQuestions}}
    {{> 9emptyCol8Div}}
    {{> 8increaseTextSizeBtn}}
</div>

<div id="content-main-e">
    <div id="task-3-text-box" class="justify-content-center bespoke-vertical-align-e col-12 font-size-sm text-left ">
        <div>
            <form action="#" method="POST">
                    <table class="table table-sm table-striped">
                    {{> radioheadingeffective}}
                    {{#each perguntas}} {{#if radio}} {{> radiorow this}} {{/if}} {{/each}}
                </table>      
            </form>
        </div>
    </div>
</div>

<div id="footer-e" class="row">

    <div class="col-2">
        <div id="back-button" class="float-left">
            {{#if urlsAndPages.backbutton}}
            <a href={{urlsAndPages.previousPage}} role="button" class="btn btn-lg btn-secondary float-left">Return to description</a>
            {{/if}}
        </div>
    </div>

    <div class="col-8">
        <div class="text-center">
            <div id="warning-message-small"></div>

            {{#if urlsAndPages.pagination}}
                <div id="page-number">{{> pageNumberFormat}}{{urlsAndPages.pagination}}</div></div>
            {{/if}}
        </div>
    </div>

    <div class="col-2">
        <div class="float-right">
            <a role="button" onclick="checkQuestions(getArrayOfQuestions());" class="btn btn-lg btn-primary text-white float-right hand-curser">Next</a>
        </div>
    </div>
</div>