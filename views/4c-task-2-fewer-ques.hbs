
    <script type="text/javascript" src="js/disableQuestions.js"></script>

{{> 1contentheading}}
    <div class="row h-100">
        <div class="col-md-12 align-self-end">
              <h2>{{#each perguntas}}{{#if heading}}{{this.text}}{{/if}}{{/each}}</h2>
        </div>
    </div>
</div>

{{> 2contentmain}}
    <div class="row justify-content-center">
        <div class="col-sm-10 col-md-12 mt-5">
            <form action="#" method="POST">
                <table class="table table-striped my-5">
                    {{#each perguntas}} 
                        {{#if dropdown}}
                            <tr class="row">
                                <td class="text-left col-sm-6">{{this.text}}</td>          
                                <td class="col-sm-6">
                                    <select id={{this.id}} name={{this.id}} class="form-control dropdn-form-validation first-radio-box" onclick="removeWarning();" onChange="disableDependencies({{this.id}});">
                                        <option disabled selected value> -- select an option -- </option>
                                            {{#each this.options}}
                                                <option value={{{this}}}>{{this}}</option>
                                            {{/each}}
                                </select>
                                </td>    
                            </tr>
                        {{/if}}

                        {{#if yesno}}
                                <tr class="row">
                                    <td class="text-left col-sm-6">{{this.text}}</td>
                                    <td id={{this.id}} class="text-center offset-sm-2 col-sm-2 btn-group yesno" data-toggle="buttons" onclick="removeWarning();" >
                                    
                                        <label class="btn btn-primary"><input type="radio" name={{this.id}} value="1" class="first-radio-box" />Yes</label>
                                        <label class="btn btn-danger"><input type="radio" name={{this.id}} value="0" value="No"/>No</label>
                                    
                                    </td>
                                </tr>
                        {{/if}}

                        {{#if textarea}}
                            <tr class="row">
                                <td class="text-left col-sm-6">{{this.text}}</td>
                                <td class="col-sm-6">
                                    <input id={{this.id}} name={{this.id}} class="form-control first-radio-box text-area-for-vali" type="text" autocomplete="off" onclick="removeWarning();">
                                </td>
                            </tr>
                        {{/if}}
                    {{/each}}
                </table>      
            </form>
        </div>
    </div>
{{!-- closing div of end of contentmain below --}}
</div>



{{> 3footer}}

    {{> 4footerleft}}
            {{#if urlsAndPages.backbutton}}
            <a href={{urlsAndPages.previousPage}} role="button" class="btn btn-lg btn-secondary float-left">Back</a>
            {{/if}}
        </div>
    </div>

    {{> 5footermiddle}}

            <div id="warning-message"></div>

            {{#if urlsAndPages.pagination}}
            <div id="page-number">{{> pageNumberFormat}}{{urlsAndPages.pagination}}</div></div>
            {{/if}}

        </div>
    </div>

    {{> 6footerright}}
            <a role="button" onclick="checkQuestionsTask2(getArrayOfQuestions());" class="btn btn-lg btn-primary text-white float-right hand-curser">Next</a>
        </div>
    </div>
{{!-- closing div of footer below --}}
</div>
