<div class="row justify-content-center vertical-center">
  <div class="col-md-8 p-4">
    {{> navbar}}
      <form action="/individual-login" method="POST">
      <fieldset class="bg-light p-4 rounded">
          <div class="form-group">
              <div class="my-4">
              <label for="participant_id">First Name</label>
              <input type="text" class="form-control" name="firstNameOnLogin" value="">
              </div>
              <div class="my-4">
              <label for="participant_id">Family Name</label>
              <input type="text" class="form-control" name="familyNameOnLogin" value="">
              </div>
              <div class="my-4">
              <label for="participant_id">Email</label>
              <input type="email" class="form-control" name="emailOnLogin" value="">
