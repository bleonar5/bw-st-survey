<div style="height: 100vh">
<form onSubmit="return checkQuestionsRadios(getArrayOfQuestions());" method="POST" class="h-100">
<div class="row h-100">

{{!-- Start of Left Side Bar --}} 
    <div id="left-col" class="col-1 h-100">

        <div class="row row-10h" id="empty-skip-btn" > {{!-- Skip button used to speed up testing phase. Not used for production --}}
            <div class="align-self-start">
                <a id="skip-btn" role="button" onclick="completeQuestions(); removeWarning();" class="btn btn-warning float-left hand-curser">Skip</a>
            </div>
        </div>

        <div class="row row-80h d-flex align-items-center">
            <div class="w-100 text-center">
                <h4 class="text-primary m-0 font-size-200 pl-4 vertical-text">{{#each heading}} {{#if this.heading}}{{this.text}}{{/if}} {{/each}}</h4>
            </div>
        </div>

        <div class="row row-10h">
            <div class="align-self-end col-12">
                <div class="text-left {{> paddingBottomDefault }}">
                    {{#if urlsAndPages.backbutton}}
                        <a href={{urlsAndPages.previousPage}} role="button" class="btn btn-secondary">Back</a>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
{{!-- End of Left Side Bar --}} 



    <div id="main-col" class="col-10 h-100"> {{!-- << Start of Middle Column (col-10) --}}

{{!-- Header if Necessary --}}        

        <div class="row h-100">
            {{!-- ^^ Container --}}   
            {{!-- Main Content Start --}} 
            <div class="row h-100 d-flex align-items-center font-size-90" id="task-3-text-box">
                <div id="task-3-text-box-1" class="h-100 col-12 px-0 py-lg-0 py-xl-4">
                    <div class="row h-100 d-flex align-items-center">
                        {{#each sheetsSituations}}
                            {{#if scenario}}
                                {{{this.text}}}<br/>
                            {{/if}}
                        {{/each}}

                        <table class="table-sm table-striped">
                            <thead>
                                <tr>
                                    <td class="blank col-7"></td>

                                    <th class="key col-1">
                                        <div class="text-center font-size-sm"><span class="font-weight-normal">Very<br></span><span class="text-danger">Ineffective</span></div>
                                    </th>
                                    <th class="key col-1">
                                        <div class="text-center font-size-sm"><span class="font-weight-normal">Somewhat<br></span><span class="text-danger">Ineffective</span></div>
                                    </th>
                                    <th class="key col-1 align-middle">
                                        <div class="text-center text-secondary font-weight-normal font-size-sm "><span>Neutral</span></div>
                                    </th>
                                    <th class="key col-1">
                                        <div class="text-center font-size-sm"><span class="font-weight-normal">Somewhat<br></span><span class="text-success">Effective</span></span></div>
                                    </th>
                                    <th class="key col-1">
                                        <div class="text-center font-size-sm"><span class="font-weight-normal">Very<br></span><span class="text-success">Effective</span></span></div>
                                    </th>
                                </tr>
                            </thead>
                            
                            <tbody>
                                {{#each perguntas}} 
                                {{#if radio}} 
                                    <tr name="radioques">
                                        <td class="text-left col-7">{{this.text}}</td>

                                        <td class="radiocol text-center input col-1">
                                                <input class="first-radio-box" type="radio" name={{this.id}} value="1-strongly-disagree" onclick="removeWarning();" {{#if this.option1Selected}} checked {{/if}} required>
                                            </td>
                                        <td class="radiocol text-center input col-1">
                                                <input type="radio" name={{this.id}} value="2-somewhat-disagree" onclick="removeWarning();" {{#if this.option2Selected}} checked {{/if}} required>
                                            </td>
                                        <td class="radiocol text-center input col-1">
                                                <input type="radio" name={{this.id}} value="3-no-opinion" onclick="removeWarning();" {{#if this.option3Selected}} checked {{/if}} required>
                                            </td>
                                        <td class="radiocol text-center input col-1">
                                                <input type="radio" name={{this.id}} value="4-somewhat-agree" onclick="removeWarning();" {{#if this.option4Selected}} checked {{/if}} required>
                                            </td>
                                        <td class="radiocol text-center input col-1">
                                                <input type="radio" name={{this.id}} value="5-strongly-agree" onclick="removeWarning();" {{#if this.option5Selected}} checked {{/if}} required>
                                            </td>
                                    </tr>
                                {{/if}} 
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            {{!-- ^^ task-3-text-box end --}}
        </div> 
        {{!-- row h-100 End --}}

{{!-- Footer if Necessary --}}
        
    </div>
{{!-- End of Middle Column (col-10) --}}



    <div id="right-col" class="col-1 h-100"> {{!-- << Start of Right Side Bar --}}
        <div class="row h-50">
            <div class="align-self-top col-12">
                <div class="text-right {{> paddingTopDefault }}">
                    <a id="toggle-text-size-btn" role="button" onclick="toggleFontSize();" class="btn btn-secondary text-white hand-curser"><strong>a</strong>A</a>
                </div>
            </div>
        </div>

        <div class="row h-50">
            <div class="align-self-end col-12">
                <div class="text-right {{> paddingBottomDefault }}">
                    <button role="button" type="submit" class="btn btn-primary text-white hand-curser">Next</button>
                </div>
                </form>
            </div>
        </div>
    </div>
{{!-- ^^ End of Right Side Bar --}}

</div> {{!-- << End of Page Div --}}
</form>
</div>
